@{
    ViewBag.Title = "Home Page";
}

<div class="jumbotron">
    <h1>Chào mừng bạn đến với khoá học siêu cấp VIP pro </h1>
    <p class="lead"> Cách đi rừng hiệu qua? cắm mắt kiểm soát, phản gank chuẩn mực </p>
    <a href="https://www.facebook.com/taoghetfb/"> FaceBook </a>
    
</div>


    <div class="row">
        <ul class="course">
            
            <li>
                <img src="~/images/166901393_1384480815218248_3414617181070975519_n.png" width="70" height="100"/>
               

                <img src="~/images/but2ngontay.jpg" width="70" height="100"/>

                <img src="~/images/167237174_1413469085659815_533833688571707643_n.jpg"width="70" height="100" />
            </li>
           
            @foreach (var course in Model)
            {
                <li>
                    <div class="date">
                        <div class="month">
                            @course.DataTime.ToString("MM")
                        </div>
                        <div class="day">
                            @course.DataTime.ToString("dd")
                        </div>
                    </div>
                    <div class="details">
                        <span class="lecture">
                            @course.Name
                        </span>
                        <span class="category">
                            @course.Category.Name
                        </span>
                        <span class="place">
                            @course.Place
                        </span>
                        <button data-course-id="@course.Id" class="btn btn-default btn-sm js-tongle-attendance"> Going?

                        </button>
                     
                       
                    </div>
                </li>  
            }
        </ul>
@section scripts {
    <script>
        $(document).ready(function () {
            $(".js-tongle-attendance").click(function (e) {
                var button = $(e.target);
                $.post("/api/Attendences", { Id: button.attr("data-course-id") })
                    .done(function () {
                        alert("Dang ky khoa hoc thanh cong!!!!");
                        button
                            .removeClass("btn-default")
                            .addClass("btn-info")
                            .text("Going");
                    }).fail(function () {
                        alert("Oh my f*cking god da co loi gi do roi bro");
                    });
            });

        });
    </script>    }

    </div>
